<%- include('partials/header') %>

<div class="container mt-4">
    <h1 class="text-light">Create New Post</h1>
    <form action="/posts" method="POST">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="text" name="title" id="title" class="form-control bg-dark text-light" required>
        </div>
        <div class="form-group">
            <label for="excerpt" class="text-light">Excerpt</label>
            <textarea name="excerpt" id="excerpt" class="form-control bg-dark text-light" rows="2" required></textarea>
        </div>
        <div class="form-group">
            <label for="body" class="text-light">Body</label>
            <textarea name="body" id="body" class="form-control bg-dark text-light" rows="10" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Publish Post</button>
    </form>
</div>

<%- include('partials/footer') %>
