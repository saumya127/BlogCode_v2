<%- include('partials/header') %>

<div class="container mt-4">
    <h1 class="text-light">My Dashboard</h1>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-light">Your Posts</h2>
        <a href="/posts/new" class="btn btn-primary">Create New Post</a>
    </div>

    <div class="list-group">
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <a href="/posts/<%= post._id %>" class="list-group-item list-group-item-action bg-dark text-light">
                    <h5 class="mb-1"><%= post.title %></h5>
                    <small>Published on <%= post.createdAt.toDateString() %></small>
                </a>
            <% }) %>
        <% } else { %>
            <p class="text-muted">You haven't written any posts yet.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
